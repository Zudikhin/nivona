	Navigation
==============================*/
.navigation
	display none
	@media (min-width: 992px)
		display block
		width 100%
		background-color #61300c
		height 60px
		li
			display inline-block
			float left
			width 20%
			position relative
			&:before
				content ''
				position absolute
				top 50%
				left 0
				width 3px
				height 31px
				margin-top -15.5px
				background url('../img/icon/dotes.png') no-repeat center
