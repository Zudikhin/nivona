/*==============================
	Video
==============================*/
.video
	display block
	width 100%
	height 300px
	position relative
	&__btn
		width 120px
		height 120px
		display block
		position absolute
		border-radius(50%)
		top 50%
		left 50%
		margin -60px 0 0 -60px
		background url('../img/icon/play.png') no-repeat center / 120px 120px
		&:hover
			background url('../img/icon/play--hover.png') no-repeat center / 120px 120px
	@media (min-width: 768px)
		height 450px
	@media (min-width: 992px)
		height 500px
	@media (min-width: 1200px)
		height 520px

/*==============================
	Tabs
==============================*/
.tabs
	padding 40px 0
	&__nav
		display block
		margin-bottom 30px
		border-bottom 1px solid #dadada
		li
			display inline-block
			float left
			line-height 56px
			position relative
			margin-right 15px
			&:before
				content ''
				position absolute
				bottom 0
				left 0
				width 100%
				height 0
				background-color $red
				display block
				transition(.4s ease)
			&.active
				&:before
					height 5px
			&:last-child
				margin-right 0
		a
			display block
			color $black
			text-transform uppercase
			font-size 14px
			letter-spacing .2px
	@media (min-width: 768px)
		&__nav
			margin-bottom 40px
			li
				margin-right 50px
				&:last-child
					margin-right 0
	@media (min-width: 992px)
		padding 50px 0 40px
	@media (min-width: 1200px)
		padding 60px 0 40px
		&__nav
			margin-bottom 60px

/*==============================
	Benefits
==============================*/
.benefits
	position relative
	display block
	margin-bottom 35px
	&__img
		float left
		width 100px
		height 100px
		margin-right 20px
	&__title
		display block
		color $black
		font-family 'robotocondensed-bold'
		font-size 18px
		margin-bottom 10px
	&__text
		display block
		font-size 16px
		color $black
		font-family 'robotocondensed-light'
	@media (min-width: 768px)
		min-height 140px
		&__img
			position absolute
			width 140px
			height 140px
			top 0
			left 0
			margin 0
			float none
		&__title
			padding-left 160px
			font-size 20px
			letter-spacing .2px
		&__text
			padding-left 160px
			line-height 24px
	@media (min-width: 992px)
		&__title
			line-height 100%
			margin-bottom 15px
	@media (min-width: 1200px)
		margin-bottom 60px
		&__img
			width 160px
			height 160px
		&__title
		&__text
			padding-left 180px
		&__title
			margin-bottom 20px

/*==============================
	Comparison
==============================*/
.comparison-table
	min-width 100%
	border 1px solid #ececec
	.product-card
		border transparent
		margin-bottom 0
		.compare
			display none
	thead
		td
			border-left 1px solid #ececec
			border-bottom 1px solid #ececec
	tbody
		td
			padding 20px
			border 1px solid #ececec
			color $black
			font-size 15px
			font-family 'robotocondensed-light'
			&:first-child
				color #a6a6a6
	@media (min-width: 768px)
		tbody
			td
				padding 20px 20px 20px 30px

.comparison-table-wrap
	margin-bottom 40px
	@media (min-width: 768px)
		margin-bottom 100px

/*==============================
	Article
==============================*/
.article
	padding-bottom 40px
	&__img
		position relative
		margin-bottom 20px
		width 100%
	&__text
		font-size 16px
		color $black
		font-family 'robotocondensed-light'
	@media (min-width: 768px)
		&__img
			width auto
			&--left
				float left
				margin 0 20px 20px 0
			&--right
				float right
				margin 0 0 20px 20px
		&__text
			margin-bottom 25px
	@media (min-width: 992px)
		&__text
			line-height 24px

/*==============================
	Modal
==============================*/
.modal
	background-color white
	margin 40px auto
	position relative
	display block
	padding 30px 15px
	&--signin
		max-width 430px
	&--signup
		max-width 800px
	&--forgot
	&--call
		max-width 750px
	&--thx
		max-width 520px
	&__close
		position absolute
		right 0
		top 0
		width 42px
		height 42px
		display block
		background url('../img/icon/close.png') no-repeat center #ededed
		&:hover
			background url('../img/icon/close--hover.png') no-repeat center $red
	&__title
		font-size 22px
		color $red
		text-transform uppercase
		display block
		margin-bottom 20px
		letter-spacing .2px
	&__text
		font-size 16px
		color $black
		letter-spacing .4px
		margin-bottom 0
		font-family 'robotocondensed-light'
		span
			font-size 18px
			font-family 'robotocondensed-bold'
	&__img
		display block
		margin 20px auto 30px
	&__thx
		display block
		color $red
		text-transform uppercase
		font-size 26px
		font-family 'robotocondensed-bold'
		text-align center
	@media (min-width: 768px)
		padding 30px 60px 50px